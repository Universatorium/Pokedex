extends layout 

block karten
  
  style.
    .details {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      margin-top:100px;
    }

    .details h1 {
      margin-top: 10px;
      font-size: 55px;
    }
    .details h2 {
      margin-top: 10px;
      font-size: 35px;
    }
    .details h3 {
      margin-top: 10px;
      font-size: 25px;
    }
  
  
  .details

    h1  #{pokemon.Name}
      table
          img.bilddiv(src= "/images/" + pokemon.Bild)

          h3 Typ: #{pokemon.Typ}
  
        
          th 
            h2 Beschreibung: #{pokemon.Beschreibung}
          tr 
            p Größe: #{pokemon.Größe}
      a(href='/') zurück
