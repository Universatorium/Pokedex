FROM node:latest

# Setze das Arbeitsverzeichnis im Container
WORKDIR /app

# Kopiere die package.json und package-lock.json in den Container
COPY package*.json ./

# Installiere die Abh채ngigkeiten
RUN npm install

# Kopiere den restlichen Frontend-Code in den Container
